<body>

  <h1>ü•§ SABID - Jualan Minuman Dingin</h1>

  <img src="https://cdn-icons-png.flaticon.com/512/2738/2738894.png"
       id="drinkImage"
       class="drink"
       alt="Minuman SABID">

  <div class="stats">
    üí∞ Uang: <span id="money">10000</span><br>
    ü•§ Stok Minuman: <span id="stock">10</span>
  </div>

  <button onclick="sellDrink()">Jual Minuman (+Rp5.000)</button>
  <button onclick="buyStock()">Beli Stok (-Rp3.000)</button>

  <div id="message"></div>

  <!-- Suara kasir -->
  <audio id="cashSound" src="https://cdn.pixabay.com/download/audio/2022/03/15/audio_42d073f317.mp3?filename=ding-36029.mp3"></audio>

<script>
  let money = 10000;
  let stock = 10;
  const sellPrice = 5000;
  const buyPrice = 3000;

  const moneyEl = document.getElementById('money');
  const stockEl = document.getElementById('stock');
  const messageEl = document.getElementById('message');
  const drinkImage = document.getElementById('drinkImage');
  const cashSound = document.getElementById('cashSound');

  function updateDisplay() {
    moneyEl.textContent = money;
    stockEl.textContent = stock;
  }

  function playSound() {
    cashSound.currentTime = 0;
    cashSound.play();
  }

  function animateDrink() {
    drinkImage.classList.add('shake');
    setTimeout(() => drinkImage.classList.remove('shake'), 400);
  }

  function sellDrink() {
    if (stock > 0) {
      stock--;
      money += sellPrice;
      messageEl.textContent = "‚úÖ Minuman SABID laku terjual!";
      playSound();
      animateDrink();
    } else {
      messageEl.textContent = "‚ùå Stok habis! Beli stok dulu.";
    }
    checkGameOver();
    updateDisplay();
  }

  function buyStock() {
    if (money >= buyPrice) {
      stock++;
      money -= buyPrice;
      messageEl.textContent = "üõí Kamu membeli 1 stok minuman.";
      playSound();
    } else {
      messageEl.textContent = "‚ö†Ô∏è Uang tidak cukup!";
    }
    checkGameOver();
    updateDisplay();
  }

  function checkGameOver() {
    if (stock === 0 && money < buyPrice) {
      messageEl.textContent = "üíÄ Game Over! Uang habis dan stok kosong.";
    }
  }

  updateDisplay();
</script>
</body>
